{
  "name": "ltd-beget/sphinx-configurator",
  "type": "library",
  "description": "Php library for parsing and editing sphinx.conf files.",
  "keywords": [
    "sphinx"
  ],
  "authors": [
    {
      "name": "Viskov Sergey",
      "homepage": "https://github.com/voksiv"
    }
  ],
  "require": {
    "php": ">=7.0",
    "symfony/yaml": "~3.0",
    "marc-mabe/php-enum": "2.2.*",
    "ltd-beget/sphinx-configuration-tokenizer": "~1.0.3"
  },
  "require-dev": {
    "theseer/phpdox": "0.8.*",
    "phpunit/phpunit": "5.2.*",
    "tideways/profiler": "2.0.*"
  },
  "autoload": {
    "psr-0": {
      "LTDBeget\\sphinx": "src"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "LTDBeget\\dev": "src"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/b1rdex/sphinx-configuration-tokenizer"
    },
    {
      "type": "vcs",
      "url": "https://github.com/b1rdex/stringstream"
    }
  ],
  "conflict": {
    "phpunit/php-timer": ">=2"
  }
}
